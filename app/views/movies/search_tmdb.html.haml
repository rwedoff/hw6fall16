-#  This file is app/views/movies/search_tmdb.html.haml
%h1 The following movies containing '#{@search_terms}' were found on Tmdb

= form_tag movies_add_tmdb_path do
    %table#movies
        %thead
            %tr
                %th{:class => @title_header} Movie Title
                %th Rating
                %th{:class => @date_header} Release Date
                %th Select
        %tbody
            - @movies.each do |movie|
                %tr
                    %td= movie[:title] 
                    %td= movie[:rating]
                    %td= movie[:release_date]
                    %td=check_box_tag "tmdb_movies[#{movie[:tmdb_id]}]"
                    
    = submit_tag 'Add Selected Movies', :id=> "movies_button"     

